generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String   
  password     String  
  role         Role     @default(REPORTER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  reportedBugs Bug[]
  
  @@map("users")
}

model Bug {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  severity     Severity
  status       Status   @default(OPEN)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  reporterId   String
  reporter     User     @relation(fields: [reporterId], references: [id], onDelete: Cascade)

  @@map("bugs")
}

enum Role {
  REPORTER
  ADMIN
}

enum Severity {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  OPEN
  IN_PROGRESS
  CLOSED
}